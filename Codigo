		             scanf("%d",&num2);
                     resultado = num1 - num2;
                     system("cls");
	                 printf("El resultado del balance es:%d",resultado);
	                 if (resultado > 0)
                        printf("\nEl balance es positivo");
                     if (resultado < 0)
                        printf("\nEl balance es negativo");

